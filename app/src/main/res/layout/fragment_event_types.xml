<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/newsEvent"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"

        android:layout_alignStart="@+id/whatTypeEvent"
        android:layout_marginTop="130dp"
        android:background="@drawable/noticias"
        android:contentDescription="@string/todo"
        android:layout_alignLeft="@+id/whatTypeEvent" />


    <Button
        android:id="@+id/jobOfferEvent"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/newsEvent"
        android:layout_marginEnd="63dp"
        android:background="@drawable/ofertatrabajo"
        android:contentDescription="@string/todo"
        android:layout_marginRight="63dp"
        android:layout_alignParentRight="true" />


    <Button
        android:id="@+id/notificationEvent"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/newsEvent"
        android:layout_marginBottom="158dp"
        android:background="@drawable/notificaciones"
        android:contentDescription="@string/todo"
        android:layout_alignLeft="@+id/newsEvent" />




    <Button
        android:id="@+id/event"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/jobOfferEvent"
        android:layout_alignTop="@+id/notificationEvent"
        android:background="@drawable/eventos2"
        android:contentDescription="@string/todo"
        android:layout_alignLeft="@+id/jobOfferEvent" />



    <TextView
        android:id="@+id/whatTypeEvent"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="¿Qué tipo de evento vas a crear?"
        android:textSize="18dp"

        android:textAlignment="center"
        android:textColor="#009EAD" />


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"


        android:layout_above="@+id/whatTypeEvent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|right"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/cerrar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp" />




</RelativeLayout>