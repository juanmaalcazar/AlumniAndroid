<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EventTypes4Fragment">



    <Button
        android:id="@+id/botonBuscarLocalizacionEvent"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#009EAD"
        android:layout_marginTop="180dp"
        android:layout_marginStart="160dp"
        android:text="Buscar"
        android:textColor="#ffff"
        android:textAllCaps="false"
        tools:ignore="RtlCompat" />


    <Button
        android:id="@+id/botonCrearEvento"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#009EAD"
        android:layout_marginTop="380dp"
        android:layout_marginStart="150dp"
        android:text="Crear Evento"
        android:textColor="#ffff"
        android:textAllCaps="false"
        tools:ignore="RtlCompat" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/cerrar"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*Opcional"
        android:layout_marginTop="0dp"
        android:textColor="#009EAD"/>

    <TextView
        android:id="@+id/descriptionEvent"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        android:textAlignment="center"
        android:layout_marginBottom="55dp"
        android:text="Tambien puedes añadir una localización"
        android:textColor="#009EAD"
        android:layout_marginLeft="120dp" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="75dp"

        />

    <ImageView
        android:id="@+id/imageEvent"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/localizacion"
        android:contentDescription="@string/todo"
        android:layout_marginStart="20dp" />









</RelativeLayout>