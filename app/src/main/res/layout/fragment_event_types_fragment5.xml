<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EventTypes4Fragment">



    <Button
        android:id="@+id/botonA単adirImagenEvent"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#009EAD"
        android:layout_marginTop="380dp"
        android:layout_marginStart="150dp"
        android:text="A単adir"
        android:textColor="#ffff"
        android:textAllCaps="false"
        tools:ignore="RtlCompat" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/cerrar"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*Opcional"
        android:layout_marginTop="0dp"
        android:textColor="#009EAD"/>

    <TextView
        android:id="@+id/descriptionEvent"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        android:textAlignment="center"
        android:layout_marginBottom="55dp"
        android:text="多Quieres a単adir un sitio Web?"
